<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/black"
    tools:context=".Motivation">

    <TextView
        android:id="@+id/motivationQuote"
        android:layout_width="393dp"
        android:layout_height="200dp"
        android:foregroundTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <ImageButton
        android:id="@+id/refreshMotivationBtn"
        android:layout_width="74dp"
        android:layout_height="71dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toTopOf="@+id/motivationQuote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/refresh" />

    <ImageButton
        android:id="@+id/favouriteMotivationButton"
        android:layout_width="97dp"
        android:layout_height="77dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motivationQuote"
        app:layout_constraintVertical_bias="0.271"
        app:srcCompat="@drawable/favouritebtn" />

    <ImageButton
        android:id="@+id/copyMotivationBtn"
        android:layout_width="97dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/favouriteMotivationButton"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motivationQuote"
        app:layout_constraintVertical_bias="0.285"
        app:srcCompat="@drawable/copy" />
</androidx.constraintlayout.widget.ConstraintLayout>